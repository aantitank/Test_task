<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Test task{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css')}}" />
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h4 class="my-0 mr-md-auto font-weight-normal">Test CRUD panel of news site</h4>
    <form method="post" action="{{ path('news_search') }}">
    <input class="input" type="text" maxlength="20" name="search">
    <select name="search_atribute">
        <option value="Title">Title</option>
        <option value="Abstract">Abstract</option>
        <option value="Date">Date</option>
        <option value="Text">Text</option>
        <option value="Activity">Activity</option>
    </select>
    <input class="btn" type="submit" name="submit_search" value="submit">
    </form>
    <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="{{ path('news_index') }}">All news</a>
        <a class="p-2 text-dark" href="{{ path('publish_news') }}">Publish the news</a>
    </nav>
</div>
<div class="container col-md-8">
{% block body %}

{% endblock %}
</div>
{% block javascripts %}
<script src="{{ asset('assets/js/jquery-3.1.1.slim.min.js') }}" ></script>
<script src="{{ asset('assets/js/tether.min.js') }}"></script>
<script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>
